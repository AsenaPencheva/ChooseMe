@model PagedList.PagedList<ChooseMe.Web.Models.Forms.AdoptionFormsAdopterListViewModel>
<table class="table table-striped text-center">
    <tr>
        <th class="text-center">
            From
        </th>
        <th class="text-center">
            Animal Name
        </th>
        <th class="text-center">
            More
        </th>
        <th class="text-center">
            Delete
        </th>
    </tr>
    @if (Model.Count() == 0)
    {
        <h1>You don't have adoption forms</h1>
    }
    else
    {
        foreach (var af in Model)
        {
            <tr>
                <td>
                    @af.CreatedOn
                </td>
                <td>
                    <a href="~/Views/Animals/Details/@af.AnimalId">@af.AnimalName</a>
                </td>
                <td>
                    <a href="~/Views/Forms/Details/@af.Id">Full form</a>
                </td>
                <td>
                    @Html.ActionLink("X", "Delete", "AdoptionForm", new { area = "", id = @af.Id }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    }
</table>
<div id="ajax-search-results"></div>
@Html.Partial("_Paging")