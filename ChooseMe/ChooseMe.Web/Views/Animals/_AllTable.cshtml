@using PagedList.Mvc
@model IEnumerable<ChooseMe.Web.Models.Animal.AnimalsListView>
<div class="row" id="all-pages">
    @if (Model.Count() == 0)
    {
        <div class="text-center"><h2>No results found!</h2></div>
    }
        @foreach (var animal in Model)
        {
            <div class="items col-xs-12 col-sm-6 col-md-6 col-lg-6 clearfix">
                <div class="info-block block-info clearfix">
                    <div class="square-box pull-left">
                        @Html.DisplayFor(m => animal.Photo, "PetPicture")
                    </div>
                    <h5 class="text-success">@animal.Organization.Name</h5>
                    <h4>Name:<b><a href="~/Animals/Details/@animal.Id">@animal.Name</a></b></h4>
                    @Html.DisplayFor(m => animal.Age, "Age")
                    <h5>
                        Color: <em>@animal.FurColor</em>
                        @Html.DisplayFor(m => animal.IsLonghaired, "IsLonghaired")
                        </h5>
                    <p>@Html.DisplayFor(m => animal.Gender, "Gender")</p>
                </div>
            </div>
        }
</div>