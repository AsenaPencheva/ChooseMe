@model System.Web.Mvc.HandleErrorInfo

@{
    ViewBag.Title = "Error";
}

<div class="container">
    <div class="row">
        <div class="error-template">
            <h1>Oops!</h1>
            <h2>404 Not Found</h2>
            <div class="error-details">
                Sorry, an error has occured, Requested page not found!<br>
            </div>
            <div class="error-actions text-center">
                <a href="~/Views/Home/Index.cshtml" class="btn btn-primary">
                    <i class="icon-home icon-white"></i> Take Me Home
                </a>
            </div>
        </div>
    </div>
</div>