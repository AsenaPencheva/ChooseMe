@model ChooseMe.Web.Areas.Organization.Models.Photo.UploadPhotoViewModel
<h2>Upload photo</h2>
<br />
<br />
@using (Html.BeginForm("Upload", "Photo", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        <div class="col-md-6">
            @Html.TextBoxFor(m => m.Files, new { type = "file", multiple = "multiple", accept = "image/*" })
        </div>
    </div>
    <div class="row">
        <input type="submit" value="Upload" class="btn btn-success" />
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
